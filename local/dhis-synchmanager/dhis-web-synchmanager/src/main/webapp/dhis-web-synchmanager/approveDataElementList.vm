                                    <input type="checkbox" class="chcktblDEApprove" name="syncappNeeded_${synchedDe.getId()}" checked />
                                </td>
                            #else
                                <td style="text-align: center; border: 1px solid">
                                    <input type="checkbox" class="chcktblDEApprove" name="syncappNeeded_${synchedDe.getId()}" />
                                </td>
                            #end

                           <td style="text-align: center; border: 1px solid">
                                <select class="DEallselect" multiple="multiple" id="sel${velocityCount}" name="syncinstances_${synchedDe.getId()}">
                                    #foreach( $instance in $deInstanceMap.get($synchedDe))
