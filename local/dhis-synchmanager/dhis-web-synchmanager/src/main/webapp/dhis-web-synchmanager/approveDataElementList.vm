                                    #end
                                        #foreach($instance in $instancesLeftMap.get($synchedDe))
                                             <option value="$instance.getId()" >$encoder.htmlEncode( $instance.getName() )</option>
                                        #end
                                 </select>
                            </td>
                            <td style="text-align: center; border: 1px solid" >
                                <input type="checkbox" class="chcktblDE" id="syncapproveStatus_${synchedDe.getId()}" name="syncapproveStatus_${synchedDe.getId()}"  />
                            </td>
                            #*#if($deInstanceMap.get($synchedDe).get(0).getApproveStatus())
                                <td style="text-align: center; border: 1px solid" >
                                    <input type="checkbox" class="chcktblDE" id="syncapproveStatus_${synchedDe.getId()}"  name="syncapproveStatus_${synchedDe.getId()}" checked />
                                </td>
                            #else
                                <td style="text-align: center; border: 1px solid" >
                                    <input type="checkbox" class="chcktblDE" id="syncapproveStatus_${synchedDe.getId()}" name="syncapproveStatus_${synchedDe.getId()}"  />
                                </td>
                            #end*#
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>

        </div>
    </div>

