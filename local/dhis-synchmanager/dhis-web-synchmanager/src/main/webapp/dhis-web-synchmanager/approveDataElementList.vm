<script type="text/javascript">

   $(document).ready(function() {
        $('.DEmulti-select , .DEhead_multiselect, .DEallselect, .HeadDEallselect').multiselect({
            includeSelectAllOption: true,
            maxHeight: 150,
            numberDisplayed: 1,
            buttonWidth: '150px'
        });

       $('.chckHeadDE').click(function(event) {  //on click
           if(this.checked) { // check select status
               $('.chcktblDE').each(function() { //loop through each checkbox
                   this.checked = true;  //select all checkboxes with class "checkbox1"
               });
           }else{
               $('.chcktblDE').each(function() { //loop through each checkbox
                   this.checked = false; //deselect all checkboxes with class "checkbox1"
               });
           }
       });

       $('.chckHeadDEApprove').click(function(event) {  //on click
           if(this.checked) { // check select status
               $('.chcktblDEApprove').each(function() { //loop through each checkbox
                   this.checked = true;  //select all checkboxes with class "checkbox1"
               });
           }else{
               $('.chcktblDEApprove').each(function() { //loop through each checkbox
                   this.checked = false; //deselect all checkboxes with class "checkbox1"
               });
           }
       });


