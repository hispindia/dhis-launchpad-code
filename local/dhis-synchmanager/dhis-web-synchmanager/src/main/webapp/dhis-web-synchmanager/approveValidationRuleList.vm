                console.log('not select index '+index);
                $('.VRmulti-select').multiselect('deselect', [index]);
            });
        });*/

        $('#selectAllVR').change(function() {  //on click

            $( "#selectAllVR option:selected" ).each(function() {
                var value = $(this).val();

                $('.checkbox').find('input[type=checkbox]').each(function() {
                    if($(this).val() === value){
                       this.checked = true;
                    }
                });
            });

            $( "#selectAllVR  option:not(:selected)").each(function() {
                var value = $(this).val();

                $('.checkbox').find('input[type=checkbox]').each(function() {
                    if($(this).val() === value){
                        this.checked = false;
                    }
                });
            });
        });

        $('#Sync_selectAllVR').change(function() {  //on click

            $( "#Sync_selectAllVR option:selected" ).each(function() {
                var value = $(this).val();

                $('.checkbox').find('input[type=checkbox]').each(function() {
