
<script type="text/javascript">

    $(document).ready(function() {
        $('.VRmulti-select, .VRhead_multiselect, .VRallselect, .HeadVRallselect').multiselect({
            includeSelectAllOption: true,
            maxHeight: 150,
            numberDisplayed: 1,
            buttonWidth: '150px'
        });

        $('.chckHeadVR').click(function(event) {  //on click
            if(this.checked) { // check select status
                $('.chcktblVR').each(function() { //loop through each checkbox
                    this.checked = true;  //select all checkboxes with class "checkbox1"
                });
            }else{
                $('.chcktblVR').each(function() { //loop through each checkbox
                    this.checked = false; //deselect all checkboxes with class "checkbox1"
                });
            }
        });

        $('.chckHeadVRApprove').click(function(event) {  //on click
            if(this.checked) { // check select status
                $('.chcktblVRApprove').each(function() { //loop through each checkbox
                    this.checked = true;  //select all checkboxes with class "checkbox1"
                });
            }else{
                $('.chcktblVRApprove').each(function() { //loop through each checkbox
                    this.checked = false; //deselect all checkboxes with class "checkbox1"
                });
            }
        });

