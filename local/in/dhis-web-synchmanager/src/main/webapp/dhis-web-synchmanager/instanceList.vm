<table class="mainPageTable" >
    <tr>
        <td style="vertical-align:top">
            <table width="100%">
                <tr valign="bottom">
                    <!--<td>#filterDiv( "dataElement" )</td>-->
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td style="text-align:right">
                        <input type="button" value="$i18n.getString( 'add_new' )" onclick="window.location.href='showInstanceForm.action?synchType=$synchType'" style="width:80px"/>
