                </tr>
            </table>
            <div id="content">
                <table class="listTable" id="instanceList">
                    <thead>
                        <tr>
                            <th>$i18n.getString( "name" )</th>
                        </tr>
                    </thead>
                    <tbody id="list">
                        #foreach( $instance in $instances )
                            <tr id="tr${instance.id}" data-id="$!instance.id" data-uid="$!instance.uid" data-type="SynchInstance" data-name="$encoder.htmlEncode( $!instance.name )">
                                <td>$encoder.htmlEncode( $!instance.name )</td>
                            </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </td>

        <td id="detailsData">

            <div id="detailsArea">
                <div id="hideDetailsArea">
                    <a href="javascript:hideDetails()" title="$i18n.getString( 'hide_details' )"><img src="../images/hide.png" alt="$i18n.getString( 'hide_details' )"/></a>
