					<tr>
						<td>   	
							<script>                     
					           function enableEmailAttachmentCB()
					           {
					           		if($('#email').is(":checked"))
					           		{
					           		   $('#emailAttachmentCB').val("true");        		           		   			              				       				                   		
					           		}
									else
									{
									   $('#emailAttachmentCB').val("false");
					           		}
					           }
	           				</script>					             
							<input type="checkbox" checked="true" id="email" name="email" onchange="enableEmailAttachmentCB()"> 
							<input type="hidden" id="emailAttachmentCB" name="emailAttachmentCB"> 
							<label>$i18n.getString( "emailAttachment" )</label>     
						</td>	
					</tr>
										
